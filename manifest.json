{
    "manifest_version": 2,
    "name": "Redmine Print Plugin",
    "version": "1.0.3",
    "description": "A WebExtension to add Print-Buttons for Tickets to the Redmine-UI.",
    "author": "Marco Oetz",
    "applications": {
        "gecko": {
            "id": "redmineprintplugin@marcooetz.de"
        }
    },
    "icons": {
        "48": "icons/logo.png"
    },
    "options_ui": {
        "page": "settings/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-scripts/printbuttons.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "<all_urls>"
    ]
}