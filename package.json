{
    "name": "de.moetz.js.webext.print",
    "version": "1.0.0",
    "scripts": {
        "build": "npm install && npm run webpack && npm run mkdir -- build/dist/ && npm run zip",
        "start": "npm run build && concurrently \"npm run webext\" \"npm run webpack -- --watch\"",
        "webpack": "webpack --config webpack.config.js",
        "webext": "web-ext run --firefox=firefox",
        "zip": "bestzip build/dist/$npm_package_name-$npm_package_version.zip $npm_package_zipFiles",
        "mkdir": "mkdirp"
    },
    "zipFiles": "manifest.json popup/ icons/",
    "dependencies": {
        "jquery": "3.3.1",
        "jspdf": "^1.3.5"
    },
    "devDependencies": {
        "@types/jquery": "3.3.1",
        "bestzip": "1.1.4",
        "concurrently": "3.5.0",
        "mkdirp": "0.5.1",
        "node": "9.2.0",
        "npm": "5.6.0",
        "tslint": "5.8.0",
        "tslint-microsoft-contrib": "5.0.1",
        "ts-loader": "3.3.1",
        "typescript": "2.6.1",
        "web-ext": "2.2.2",
        "webpack": "3.8.1"
    }
}
